<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="oval">
            <solid
                android:color="@null"/>
            <padding
                android:bottom="4dp"
                android:left="4dp"
                android:right="4dp"
                android:top="4dp"/>
            <stroke
                android:width="1dp"
                android:color="#e0e0e0"
                />
        </shape>
    </item>
    <item>
        <shape
            android:shape="oval">
            <solid
                android:color="#ff883f"/>

            <size
                android:width="12dp"
                android:height="12dp"/>
        </shape>

    </item>
</layer-list>