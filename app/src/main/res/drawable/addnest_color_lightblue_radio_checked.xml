<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="oval">
            <solid
                android:color="@null"/>
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp"/>
            <stroke
                android:width="1dp"
                android:color="@color/light_blue"/>
        </shape>
    </item>
    <item>
        <shape
            android:shape="oval">
            <solid
                android:color="@color/light_blue"/>

            <size
                android:width="12dp"
                android:height="12dp"/>
        </shape>

    </item>
</layer-list>