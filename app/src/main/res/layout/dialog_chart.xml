<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="272dp"
        android:layout_height="151dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/memo_dialog_bg">

        <LinearLayout
            android:id="@+id/clap_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="14dp"
                android:src="@drawable/chart_clap"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@color/transparent"
                android:textStyle="normal"
                android:textSize="15dp"
                android:textColor="#000000"
                android:lineSpacingExtra="8dp"
                android:fontFamily="@font/notosanskr_medium"
                android:includeFontPadding="false"
                android:text="짝짝짝짝! 박수를 보냈어요"
                />
        </LinearLayout>

        <Button
            android:id="@+id/chart_check_btn"
            android:layout_width="84dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/clap_txt"
            android:layout_centerHorizontal="true"
            android:stateListAnimator="@null"
            android:background="@drawable/roundrec_design_active_bg"
            android:textStyle="normal"
            android:textSize="15dp"
            android:textColor="#ffffff"
            android:lineSpacingExtra="3dp"
            android:fontFamily="@font/notosanskr_medium"
            android:includeFontPadding="false"
            android:text="확인"/>
    </LinearLayout>
</LinearLayout>