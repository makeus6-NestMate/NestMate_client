<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/notice_vote_rv_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:background="@drawable/today_todo_background"
    android:clipToPadding="false"
    android:elevation="2dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/notice_vote_rv_item_img"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="19dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/chicken_img"/>

    <TextView
        android:id="@+id/notice_vote_rv_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/notosanskr_medium"
        android:textStyle="normal"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:lineSpacingExtra="14sp"
        android:includeFontPadding="false"
        android:text="공지"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/notice_vote_rv_item_img"
        android:layout_marginLeft="12dp"/>

    <TextView
        android:id="@+id/notice_vote_rv_item_vote_ing"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roundrec_design_active_bg"
        android:text="진행중"
        android:fontFamily="@font/notosanskr_medium"
        android:textStyle="normal"
        android:textSize="9sp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:textColor="@color/white"
        android:lineSpacingExtra="22sp"
        android:includeFontPadding="false"
        app:layout_constraintTop_toTopOf="@id/notice_vote_rv_item_title"
        app:layout_constraintStart_toEndOf="@id/notice_vote_rv_item_title"
        app:layout_constraintBottom_toBottomOf="@id/notice_vote_rv_item_title"
        android:layout_marginLeft="8dp"/>

    <TextView
        android:id="@+id/notice_vote_rv_item_vote_done"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roundrec_design_inactive_bg"
        android:text="마감"
        android:fontFamily="@font/notosanskr_medium"
        android:textStyle="normal"
        android:textSize="9sp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:textColor="@color/white"
        android:lineSpacingExtra="22sp"
        android:includeFontPadding="false"
        app:layout_constraintTop_toTopOf="@id/notice_vote_rv_item_title"
        app:layout_constraintStart_toEndOf="@id/notice_vote_rv_item_title"
        app:layout_constraintBottom_toBottomOf="@id/notice_vote_rv_item_title"
        android:layout_marginLeft="8dp"/>

    <TextView
        android:id="@+id/notice_vote_rv_item_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/notosanskr_regular"
        android:textStyle="normal"
        android:textSize="13sp"
        android:textColor="#7c7c7c"
        android:includeFontPadding="false"
        android:text="비밀번호 바뀜 2345입니다."
        android:textAlignment="viewStart"
        android:layout_marginTop="42dp"
        android:layout_marginBottom="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/notice_vote_rv_item_img"
        app:layout_constraintEnd_toStartOf="@id/notice_vote_rv_item_more_btn"
        android:layout_marginLeft="12dp"/>

    <ImageView
        android:id="@+id/notice_vote_rv_item_more_btn"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/more_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginRight="14dp"/>

    <TextView
        android:id="@+id/notice_vote_rv_item_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/notosanskr_regular"
        android:textStyle="normal"
        android:textSize="9sp"
        android:textColor="#c1c1c1"
        android:lineSpacingExtra="10sp"
        android:text="1월 5일 오전 4시 30분"
        android:includeFontPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="6dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@id/notice_vote_rv_item_content"/>




</androidx.constraintlayout.widget.ConstraintLayout>