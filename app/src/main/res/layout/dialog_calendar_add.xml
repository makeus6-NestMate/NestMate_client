<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="272dp"
        android:layout_height="175dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/memo_dialog_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:background="@color/transparent"
            android:textStyle="normal"
            android:textSize="15sp"
            android:textColor="#000000"
            android:lineSpacingExtra="8sp"
            android:fontFamily="@font/notosanskr_medium"
            android:includeFontPadding="false"
            android:text="직접입력"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="7dp"
            android:background="#e0e0e0"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="27dp"
            android:layout_marginTop="16dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0.5dp"
                android:textStyle="normal"
                android:textSize="13sp"
                android:textColor="#505050"
                android:lineSpacingExtra="8sp"
                android:fontFamily="@font/notosanskr_medium"
                android:includeFontPadding="false"
                android:text="내용"/>

            <EditText
                android:id="@+id/calendar_add_txt"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginLeft="10dp"
                android:gravity="center|left"
                android:paddingTop="2dp"
                android:paddingLeft="9dp"
                android:background="@drawable/memo_dialog_content_bg"
                android:hint="최대 7자"
                android:fontFamily="@font/notosanskr_medium"
                android:textStyle="normal"
                android:textSize="12sp"
                android:textColor="#1c1c1c"
                android:lineSpacingExtra="6sp"
                android:maxLength="7"
                android:lines="1"
                android:singleLine="true"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="1dp"
            android:layout_marginTop="24dp">

            <Button
                android:id="@+id/calendar_add_no_btn"
                android:layout_width="84dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/roundrec_design_inactive_bg"
                android:textStyle="normal"
                android:textSize="15sp"
                android:textColor="#ffffff"
                android:stateListAnimator="@null"
                android:lineSpacingExtra="3sp"
                android:fontFamily="@font/notosanskr_medium"
                android:includeFontPadding="false"
                android:text="취소"/>

            <Button
                android:id="@+id/calendar_add_yes_btn"
                android:layout_width="84dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="5dp"
                android:stateListAnimator="@null"
                android:background="@drawable/roundrec_design_inactive_bg"
                android:textStyle="normal"
                android:textSize="15sp"
                android:textColor="#ffffff"
                android:lineSpacingExtra="3sp"
                android:fontFamily="@font/notosanskr_medium"
                android:includeFontPadding="false"
                android:text="확인"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>