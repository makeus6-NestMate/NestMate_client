<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/rec_design">

    <RelativeLayout
        android:layout_width="272dp"
        android:layout_height="151dp">

        <LinearLayout
            android:id="@+id/clap_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="14dp"
                android:src="@drawable/chart_clap"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@color/transparent"
                android:textStyle="normal"
                android:textSize="15sp"
                android:textColor="#000000"
                android:lineSpacingExtra="8sp"
                android:text="짝짝짝짝! 박수를 보냈어요"
                />
        </LinearLayout>

        <Button
            android:id="@+id/chart_check_btn"
            android:layout_width="84dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/clap_txt"
            android:layout_centerHorizontal="true"
            android:background="@drawable/roundrec_design"
            android:textStyle="normal"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:lineSpacingExtra="3sp"
            android:text="확인"/>

    </RelativeLayout>
</FrameLayout>