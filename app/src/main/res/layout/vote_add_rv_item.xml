<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/memo_dialog_content_bg"
    android:layout_marginTop="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/vote_add_rv_item_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1."
        android:fontFamily="@font/notosanskr_regular"
        android:textStyle="normal"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:lineSpacingExtra="5sp"
        android:includeFontPadding="false"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="12dp"/>

    <TextView
        android:id="@+id/vote_add_rv_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/notosanskr_regular"
        android:textStyle="normal"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:lineSpacingExtra="5sp"
        android:includeFontPadding="false"
        app:layout_constraintTop_toTopOf="@id/vote_add_rv_item_num"
        app:layout_constraintBottom_toBottomOf="@id/vote_add_rv_item_num"
        app:layout_constraintStart_toEndOf="@id/vote_add_rv_item_num"
        android:layout_marginLeft="12dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>