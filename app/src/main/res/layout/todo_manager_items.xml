<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="83dp"
    android:layout_marginBottom="12dp"
    android:background="@drawable/today_todo_background"
    android:elevation="2dp">

    <TextView
        android:id="@+id/todo_manager_tv_oneorrepeat"
        style="@style/orangebutton"
        android:layout_width="35dp"
        android:layout_height="20dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="14dp"
        android:gravity="center"
        android:includeFontPadding="false"
        android:stateListAnimator="@null"
        android:text="반복"
        android:textSize="11dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/todo_manager_tv_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="14dp"
        android:fontFamily="@font/notosanscjkkr_regular"
        android:includeFontPadding="false"
        android:lineSpacingExtra="2dp"
        android:textColor="#7c7c7c"
        android:textSize="12dp"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@+id/todo_manager_tv_oneorrepeat"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="월.화.수" />

    <TextView
        android:id="@+id/todo_manager_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/notosanskr_medium"
        android:includeFontPadding="false"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/todo_manager_tv_oneorrepeat" />

    <TextView
        android:id="@+id/todo_manager_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:fontFamily="@font/notosanscjkkr_medium"
        android:includeFontPadding="false"
        android:text="시간"
        android:textColor="#7c7c7c"
        android:textSize="12dp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/todo_manager_tv_title" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/todo_manager_tool"
        android:layout_width="20dp"
        android:layout_height="5dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/ic_todo_manager_tool"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>