<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#fcfcfc"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/login_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="101dp"
        android:src="@drawable/chicken_img"/>
    <TextView
        android:id="@+id/login_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_below="@id/login_img"
        android:textStyle="normal"
        android:textSize="24sp"
        android:includeFontPadding="false"
        android:fontFamily="@font/jalnan"
        android:textColor="#ff883f"
        android:lineSpacingExtra="5sp"
        android:text="둥지메이트" />

    <LinearLayout
        android:id="@+id/login_insert"
        android:layout_width="321dp"
        android:layout_height="102dp"
        android:background="@drawable/rec_design"
        android:layout_below="@+id/login_title"
        android:layout_marginTop="43dp"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="321dp"
            android:layout_height="51dp"
            android:paddingLeft="20dp"
            android:weightSum="10"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/email_img"/>
            </LinearLayout>


            <EditText
                android:id="@+id/login_email"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="20dp"
                android:layout_weight="9"
                android:background="@color/nothing"
                android:breakStrategy="balanced"
                android:fontFamily="@font/notosanskr_regular"
                android:hint="이메일을 입력해주세요."
                android:inputType="text"
                android:lineSpacingExtra="3sp"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textColorHint="@color/colorTextHint"
                android:textSize="15sp"
                android:textStyle="normal" />
        </LinearLayout>

        <View
            android:layout_width="298dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="#e0e0e0"/>

        <LinearLayout
            android:layout_width="321dp"
            android:layout_height="51dp"
            android:paddingLeft="20dp"
            android:weightSum="10"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/lock_img"/>
            </LinearLayout>


            <EditText
                android:id="@+id/login_pw"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_below="@+id/login_email"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="20dp"
                android:layout_weight="9"
                android:background="@color/nothing"
                android:fontFamily="@font/notosanskr_regular"
                android:hint="비밀번호를 입력해주세요."
                android:inputType="textPassword"
                android:lineSpacingExtra="3sp"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textColorHint="@color/colorTextHint"
                android:textSize="15sp"
                android:textStyle="normal" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/login_btn"
        android:layout_width="321dp"
        android:layout_height="52dp"
        android:layout_below="@+id/login_insert"
        android:layout_marginTop="32dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/roundrec_design_inactive_bg"
        android:text="로그인"
        android:fontFamily="@font/notosanskr_medium"
        android:textStyle="normal"
        android:textSize="17sp"
        android:lineSpacingExtra="1sp"
        android:textColor="@color/white"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16sp"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:fontFamily="@font/notosanskr_regular"
            android:textStyle="normal"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:text="아직 회원이 아니신가요?"/>
        <Button
            android:id="@+id/login_register"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/nothing"
            android:text="회원가입"
            android:fontFamily="@font/notosanskr_medium"
            android:textStyle="normal"
            android:textSize="15sp"
            android:lineSpacingExtra="3sp"
            android:textColor="@color/orange"/>
    </LinearLayout>

</RelativeLayout>