<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/tip2_toolbar"
        layout="@layout/toolbar_back"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/tip2_first"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/tip2_first_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/tip2_first_divider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tip2_first_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/tip2_first_writer_img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tip2_first_writer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <include
                android:id="@+id/tip2_fir"
                layout="@layout/tip_two_layout"/>
            <include
                android:id="@+id/tip2_sec"
                layout="@layout/tip_two_layout"/>
            <include
                android:id="@+id/tip2_thr"
                layout="@layout/tip_two_layout"/>

            <LinearLayout
                android:id="@+id/tip2_last"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/tip2_last_writer_img"
                    android:layout_width="83dp"
                    android:layout_height="83dp"/>

                <TextView
                    android:id="@+id/tip2_last_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosanskr_medium"
                    android:textStyle="normal"
                    android:textSize="13sp"
                    android:textColor="#505050"
                    android:lineSpacingExtra="9sp"
                    android:gravity="center_horizontal"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tip2_bottom"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="vertical"
                android:background="#f2f2f2">

                <TextView
                    android:id="@+id/tip2_post_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosanskr_medium"
                    android:textStyle="normal"
                    android:textSize="11sp"
                    android:textColor="#c1c1c1"
                    android:lineSpacingExtra="11sp"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:id="@+id/tip2_post_person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosanskr_medium"
                    android:textStyle="normal"
                    android:textSize="11sp"
                    android:textColor="#c1c1c1"
                    android:lineSpacingExtra="11sp"
                    android:gravity="center_horizontal"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>