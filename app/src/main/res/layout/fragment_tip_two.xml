<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <include
        android:id="@+id/tip_toolbar"
        layout="@layout/toolbar_back"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/tip_first_title"
                    android:layout_width="match_parent"
                    android:layout_height="253dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="21dp"
                    android:scaleType="fitCenter"/>
                <ImageView
                    android:id="@+id/tip_first_divider"
                    android:layout_marginTop="27dp"
                    android:layout_width="26dp"
                    android:layout_height="36dp"
                    android:scaleType="centerInside"/>
                <TextView
                    android:id="@+id/tip_first_txt"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosanskr_medium"
                    android:includeFontPadding="false"
                    android:textStyle="normal"
                    android:textSize="13dp"
                    android:textColor="#505050"
                    android:lineSpacingExtra="9dp"
                    android:gravity="center_horizontal"/>
                <ImageView
                    android:id="@+id/tip_first_writer_img"
                    android:layout_marginTop="29dp"
                    android:layout_width="83dp"
                    android:layout_height="83dp"/>
                <TextView
                    android:id="@+id/tip_first_writer_name"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosanskr_medium"
                    android:includeFontPadding="false"
                    android:textStyle="normal"
                    android:textSize="13dp"
                    android:textColor="#000000"
                    android:lineSpacingExtra="9dp"
                    android:gravity="center_horizontal"/>
            </LinearLayout>

            <include
                android:id="@+id/tip_fir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="69dp"
                layout="@layout/tip_two_layout"/>
            <include
                android:id="@+id/tip_sec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="78dp"
                layout="@layout/tip_two_layout"/>
            <include
                android:id="@+id/tip_thr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="104dp"
                layout="@layout/tip_two_layout"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="118dp"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/tip_last_writer_img"
                    android:layout_width="83dp"
                    android:layout_height="83dp"/>

                <TextView
                    android:id="@+id/tip_last_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/notosanskr_medium"
                    android:includeFontPadding="false"
                    android:textStyle="normal"
                    android:textSize="13dp"
                    android:textColor="#505050"
                    android:lineSpacingExtra="9dp"
                    android:gravity="center_horizontal"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="77dp"
                android:gravity="center|left"
                android:paddingLeft="16dp"
                android:orientation="vertical"
                android:background="#f2f2f2">

                <TextView
                    android:id="@+id/tip_post_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosanskr_medium"
                    android:includeFontPadding="false"
                    android:textStyle="normal"
                    android:textSize="11dp"
                    android:textColor="#c1c1c1"
                    android:lineSpacingExtra="11dp"/>

                <TextView
                    android:id="@+id/tip_post_person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:fontFamily="@font/notosanskr_medium"
                    android:includeFontPadding="false"
                    android:textStyle="normal"
                    android:textSize="11dp"
                    android:textColor="#c1c1c1"
                    android:lineSpacingExtra="11dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>