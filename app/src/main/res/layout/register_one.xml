<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/register_one_toolbar"
            layout="@layout/toolbar_back"/>

        <LinearLayout
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/register_one_toolbar"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="17dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textSize="15dp"
                android:textColor="#000000"
                android:lineSpacingExtra="3dp"
                android:text="이름"/>
            <EditText
                android:id="@+id/register_name"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:paddingLeft="14dp"
                android:background="@drawable/rec_design"
                android:hint="이름을 입력해주세요."/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginHorizontal="20dp"
            android:layout_below="@+id/name"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textSize="15dp"
                android:textColor="#000000"
                android:lineSpacingExtra="3dp"
                android:text="전화번호"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:background="@drawable/rec_design"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/register_phone"
                    android:layout_width="0dp"
                    android:layout_height="51dp"
                    android:layout_weight="3"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="14dp"
                    android:background="@color/transparent"
                    android:hint="전화번호를 입력해주세요."/>
                <Button
                    android:id="@+id/phone_btn"
                    android:layout_width="0dp"
                    android:layout_height="27dp"
                    android:layout_weight="1"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/register_button_design"
                    android:textStyle="normal"
                    android:textSize="11sp"
                    android:textColor="#1bcbb0"
                    android:lineSpacingExtra="7sp"
                    android:text="인증번호"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/chphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginHorizontal="20dp"
            android:layout_below="@+id/phone"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textSize="15sp"
                android:textColor="#000000"
                android:lineSpacingExtra="3sp"
                android:text="인증번호"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:background="@drawable/rec_design"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/register_chphone"
                    android:layout_width="0dp"
                    android:layout_height="51dp"
                    android:layout_weight="3"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="14dp"
                    android:background="@color/transparent"
                    android:hint="인증번호를 입력해주세요."/>
                <Button
                    android:id="@+id/chphone_btn"
                    android:layout_width="0dp"
                    android:layout_height="27dp"
                    android:layout_weight="1"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/register_button_design"
                    android:textStyle="normal"
                    android:textSize="11sp"
                    android:textColor="#1bcbb0"
                    android:lineSpacingExtra="7sp"
                    android:text="확인"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginHorizontal="20dp"
            android:layout_below="@+id/chphone"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textSize="15sp"
                android:textColor="#000000"
                android:lineSpacingExtra="3sp"
                android:text="이메일"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:background="@drawable/rec_design"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/register_email"
                    android:layout_width="0dp"
                    android:layout_height="51dp"
                    android:layout_weight="3"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="14dp"
                    android:background="@color/transparent"
                    android:hint="이메일을 입력해주세요."/>
                <Button
                    android:id="@+id/email_btn"
                    android:layout_width="0dp"
                    android:layout_height="27dp"
                    android:layout_weight="1"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/register_button_design"
                    android:textStyle="normal"
                    android:textSize="11sp"
                    android:textColor="#1bcbb0"
                    android:lineSpacingExtra="7sp"
                    android:text="중복확인"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginHorizontal="20dp"
            android:layout_below="@+id/email"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textSize="15sp"
                android:textColor="#000000"
                android:lineSpacingExtra="3sp"
                android:text="비밀번호"/>
            <EditText
                android:id="@+id/register_pw"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:paddingLeft="14dp"
                android:background="@drawable/rec_design"
                android:hint="비밀번호를 입력해주세요."/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/chpw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginHorizontal="20dp"
            android:layout_below="@+id/pw"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textSize="15sp"
                android:textColor="#000000"
                android:lineSpacingExtra="3dp"
                android:text="비밀번호 확인"/>
            <EditText
                android:id="@+id/register_chpw"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:paddingLeft="14dp"
                android:background="@drawable/rec_design"
                android:hint="비밀번호를 재입력해주세요."/>
        </LinearLayout>

        <Button
            android:id="@+id/register_one_btn"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_marginBottom="28dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/chpw"
            android:background="@drawable/roundrec_design"
            android:text="다음"
            android:textColor="@color/white"/>

    </RelativeLayout>
</ScrollView>
