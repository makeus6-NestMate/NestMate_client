<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".src.main.home.nest.ViewPagerFragment">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/nest_tab_top"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorNest"
        android:clipToPadding="false"
        app:tabIndicator="@drawable/tab_selector"
        app:tabIndicatorColor="@color/orange"
        app:tabPaddingBottom="1dp"
        app:tabPaddingEnd="-1dp"
        app:tabPaddingStart="-1dp"
        app:tabSelectedTextColor="@color/orange"
        app:tabTextAppearance="@style/nest_tabtext_style" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vpInner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorNest" />

</LinearLayout>