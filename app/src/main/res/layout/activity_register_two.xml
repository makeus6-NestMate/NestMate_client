<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".src.register.RegisterTwoActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
    android:id="@+id/register_two_toolbar"
    layout="@layout/toolbar_back"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/register_two_toolbar"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/register_page_number"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/circle_bg_gray"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:gravity="center"
                android:fontFamily="@font/notosanskr_medium"
                android:textStyle="normal"
                android:textColor="@color/white"
                android:layout_marginRight="8dp"
                android:text="1"
                android:includeFontPadding="false"/>

            <TextView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/circle_bg_orange"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:gravity="center"
                android:fontFamily="@font/notosanskr_medium"
                android:textStyle="normal"
                android:textColor="@color/white"
                android:text="2"
                android:includeFontPadding="false"/>


        </LinearLayout>

        <ImageButton
            android:id="@+id/register_img_default"
            android:layout_width="108dp"
            android:layout_height="108dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="58dp"
            android:src="@drawable/register_defaut_img"
            android:scaleType="center"
            android:background="@drawable/round_design"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/register_img_selected"
            android:visibility="gone"
            android:layout_width="108dp"
            android:layout_height="108dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="58dp"
            android:src="@drawable/chicken_img"
            />

        <EditText
            android:id="@+id/register_nickname"
            android:layout_width="321dp"
            android:layout_height="51dp"
            android:layout_marginTop="29dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:background="@drawable/rec_design"
            android:fontFamily="@font/notosanskr_regular"
            android:textStyle="normal"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:lineSpacingExtra="3sp"
            android:maxLength="2"
            android:hint="@string/register_two_name"/>
    </LinearLayout>

    <Button
        android:id="@+id/register_two_btn"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_marginBottom="28dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/roundrec_design_inactive_bg"
        android:fontFamily="@font/notosanskr_medium"
        android:textStyle="normal"
        android:outlineSpotShadowColor="@color/black"
        android:lineSpacingExtra="1sp"
        android:textSize="17sp"
        android:text="회원가입"
        android:textColor="@color/white"/>

</RelativeLayout>